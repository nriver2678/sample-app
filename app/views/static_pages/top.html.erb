<% provide(:title, "Top") %>
<div class="container">
  <div class="col-md-7">
    <div class="center jumbotron" id="top-main">
      <h1 id="top-main-title">TaskApp</h1>
        <p>TaskAppは簡易ToDo管理ツールです。</p>
        <p>↓↓初めてのご利用↓↓</p>        
          <%= link_to "アカウント作成", "signup_path", class: "btn btn-lg btn-success" %>
      </div>
    </div>
    
  <div class="col-md-4">
    <h1>ログイン</h1>
    <%= form_with(model: @user, local:true) do |f| %>
      <%= f.label :"メールアドレス", class: "label-login" %>
      <%= f.email_field :email, class: 'form-control',  disabled: true %>
        
      <%= f.label :"パスワード", class: "label-login" %>
      <%= f.password_field :password, class: 'form-control',  disabled: true %>
      
      <label class="checkbox inline checkbox-login" for="remember-me">
          <input name="session[remember_me]" type="hidden" value="0"><input id="remember-me" type="checkbox" value="1" name="session[remember_me]">
          <span>ログイン情報を記憶する</span>
</label>
      
      <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-signup" %>
      <% end %>
  </div>
</div>